<div class="chat-container">
    <% items.forEach(item=> { %>
        <div class="message-container">
            <div class="user-message">
                <%= item.input %>
            </div>
            <a href="/annaApp/remove/<%=item._id %>">
                <i class="bi bi-trash"></i>
            </a>
            <div class="gpt-message">
                <%= item.output %>
            </div>
            <div style="align-self: flex-end; font-size: 9px;">
                <%= item.createdAt %>
            </div>
        </div>
        <% }) %>
</div>