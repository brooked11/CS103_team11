<h1> Simon's GPT Demo for <%= user.username %> </h1>

  <div class="row">
    <form method="post" action="simonApp">
        Prompt: <input type="text" name="userInput">
        <input type="submit" value="send">
    </form>

    <div class="col">
      <p> Here is your list of things to do! </p>
    
      <p class="m-2">
        <% if (show=='completed'){%>
          <a class="btn btn-lg btn-primary"
              href="?show=simonApp">(Show tasks to do)</a>
        <% }else {%>
          <a class="btn btn-lg btn-primary"
              href="?show=completed">(Show completed tasks)</a>
        <%}%>
      </p>
      <ul class="list-group">
        <% items.forEach(item => { %>
            <li class="list-group-item">
                <span class="">
                    <% if (item.completed) { %>
                      <a 
                        href="/simonApp/uncomplete/<%= item._id %>">
                        <i class="bi bi-check-circle-fill"></i>
                    </a>
                    <% } else {%>
                      <a 
                        href="/simonApp/complete/<%= item._id %>">
                        <i class="bi bi-check-circle"></i>
                    </a>
                    <%} %>
                    <a href="/simonApp/remove/<%=item._id %>">
                      <i class="bi bi-trash"></i>
                    </a>
                </span>
                <span class="mx-5">
                  <%= item.item %>
                </span>
                <span class="badge rounded-pill bg-danger">
                  <%= item.priority?item.priority:5 %> 
                </span>
                <a 
                   href="/simonApp/edit/<%=item._id %>">
                  <i class="bi bi-pencil-square"></i>
              </a>
                  
            </li>
            <br>
        <% }) %>
      </div>
